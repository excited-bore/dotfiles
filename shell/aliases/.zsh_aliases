# vim: set filetype=zsh

if [ -d ~/.aliases.d/ ] && [ "$(command ls -A ~/.aliases.d/)" ]; then
    for alias in ~/.aliases.d/*; do
      source "$alias"
    done
fi

if [ -d ~/.zsh_aliases.d/ ] && [ "$(command ls -A ~/.zsh_aliases.d/)" ]; then
    for alias in ~/.zsh_aliases.d/*; do
      source "$alias"
    done
fi
